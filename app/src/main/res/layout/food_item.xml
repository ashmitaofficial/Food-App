<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
   android:layout_margin="10dp"
    android:layout_height="wrap_content"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            >

            <ImageButton
                android:id="@+id/veg_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/Dish_nametxt"
                app:layout_constraintBottom_toBottomOf="@id/Dish_nametxt"
                android:tint="@android:color/holo_green_dark"
                android:src="@drawable/veg_sign" />


            <ImageButton
                android:id="@+id/nonveg_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/Dish_nametxt"
                app:layout_constraintBottom_toBottomOf="@id/Dish_nametxt"
                android:src="@drawable/veg_sign"
                android:tint="@color/button_color"
                />

            <TextView
                android:id="@+id/bestsellerTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Bestseller"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/guideline"
                app:layout_constraintStart_toEndOf="@id/veg_sign"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/Dish_nametxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Panner butter masala"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/guideline"
                app:layout_constraintStart_toEndOf="@id/veg_sign"
                app:layout_constraintTop_toBottomOf="@id/bestsellerTxt"

                />

            <ImageView
                android:id="@+id/food_pic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/food"
                app:layout_constraintStart_toEndOf="@id/guideline"
                app:layout_constraintTop_toTopOf="parent"
               />

            <TextView
                android:id="@+id/priceTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="\u20B9 240"
                app:layout_constraintEnd_toStartOf="@id/guideline"
                app:layout_constraintStart_toEndOf="@id/veg_sign"
                app:layout_constraintTop_toBottomOf="@id/Dish_nametxt" />


            <ImageButton
                android:id="@+id/rating_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/star_icon"
                android:tint="@android:color/holo_green_dark"
                app:layout_constraintBottom_toBottomOf="@id/ratingtxt"
                app:layout_constraintEnd_toStartOf="@id/ratingtxt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/ratingtxt" />


            <TextView
                android:id="@+id/ratingtxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="5.0 star"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/guideline"
                app:layout_constraintStart_toEndOf="@id/veg_sign"
                app:layout_constraintTop_toBottomOf="@id/priceTxt" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Dal+Seasonal vegetables+raita+rice + roti+roomali roti"
                android:textStyle="italic"
                app:layout_constraintEnd_toStartOf="@id/guideline"
                app:layout_constraintStart_toEndOf="@id/veg_sign"
                app:layout_constraintTop_toBottomOf="@id/ratingtxt" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:text="Add"
                android:background="@color/button_color"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/food_pic"
                app:layout_constraintEnd_toEndOf="@id/food_pic"
                app:layout_constraintStart_toStartOf="@id/food_pic"
                app:layout_constraintTop_toBottomOf="@id/food_pic" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.7" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>